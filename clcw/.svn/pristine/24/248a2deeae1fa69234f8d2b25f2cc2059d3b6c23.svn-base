<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.manzz.clcw.module.sm.dao.SmUserInfoDAO" >

  <resultMap id="SmUserInfoResultMap" type="com.manzz.clcw.domain.SmUserInfo" >
    <id column="USERINFO_ID" property="userinfoId" jdbcType="VARCHAR" />
    <result column="USER_ID" property="userId" jdbcType="VARCHAR" />
    <result column="COMPANY" property="company" jdbcType="VARCHAR" />
    <result column="SUB" property="sub" jdbcType="CHAR" />
    <result column="OPER_ID" property="operId" jdbcType="VARCHAR" />
    <result column="OPER_TIME" property="operTime" jdbcType="TIMESTAMP" />
  </resultMap>

  <sql id="SmUserInfo_Column_List" >
    USERINFO_ID, USER_ID, COMPANY, SUB, OPER_ID, OPER_TIME
  </sql>

  <select id="selectByPrimaryKey" resultMap="SmUserInfoResultMap" parameterType="java.lang.String" >
    select 
    <include refid="SmUserInfo_Column_List" />
    from wt_userinfo
    where USERINFO_ID = #{userinfoId,jdbcType=VARCHAR}
  </select>

  <delete id="deleteByPrimaryKey" parameterType="java.lang.String" >
    delete from wt_userinfo
    where USERINFO_ID = #{userinfoId,jdbcType=VARCHAR}
  </delete>

  <insert id="insert" parameterType="com.manzz.clcw.domain.SmUserInfo" >
    insert into wt_userinfo (USERINFO_ID, USER_ID, COMPANY, SUB, 
      OPER_ID, OPER_TIME)
    values (uuid(), #{userId,jdbcType=VARCHAR}, #{company,jdbcType=VARCHAR}, #{sub,jdbcType=CHAR}, 
      #{operId,jdbcType=VARCHAR}, now())
  </insert>

  <update id="updateByPrimaryKeySelective" parameterType="com.manzz.clcw.domain.SmUserInfo" >
    update wt_userinfo
    <set >
      <if test="userId != null" >
        USER_ID = #{userId,jdbcType=VARCHAR},
      </if>
      <if test="company != null" >
        COMPANY = #{company,jdbcType=VARCHAR},
      </if>
      <if test="sub != null" >
        SUB = #{sub,jdbcType=CHAR},
      </if>
      <if test="operId != null" >
        OPER_ID = #{operId,jdbcType=VARCHAR},
      </if>
      <if test="operTime != null" >
        OPER_TIME = now(),
      </if>
    </set>
    where USERINFO_ID = #{userinfoId,jdbcType=VARCHAR}
  </update>

  <update id="updateByPrimaryKey" parameterType="com.manzz.clcw.domain.SmUserInfo" >
    update wt_userinfo
    set USER_ID = #{userId,jdbcType=VARCHAR},
      COMPANY = #{company,jdbcType=VARCHAR},
      SUB = #{sub,jdbcType=CHAR},
      OPER_ID = #{operId,jdbcType=VARCHAR},
      OPER_TIME = now()
    where USERINFO_ID = #{userinfoId,jdbcType=VARCHAR}
  </update>

  <sql id="Where_Condition" >
    <where >
      <if test="userId != null and userId != ''" >
        USER_ID = #{userId,jdbcType=VARCHAR}
      </if>
      <if test="company != null and company != ''" >
        AND COMPANY = #{company,jdbcType=VARCHAR}
      </if>
      <if test="sub != null and sub != ''" >
        AND SUB = #{sub,jdbcType=CHAR}
      </if>
    </where>
  </sql>

  <sql id="Where_Fuzzy_Condition" >
    <where >
      <if test="userId != null and userId != ''" >
        USER_ID = #{userId,jdbcType=VARCHAR}
      </if>
      <if test="company != null and company != ''" >
        AND COMPANY = #{company,jdbcType=VARCHAR}
      </if>
      <if test="sub != null and sub != ''" >
        AND SUB = #{sub,jdbcType=CHAR}
      </if>
    </where>
  </sql>

  <select id="queryCount" parameterType="com.manzz.clcw.domain.SmUserInfo" resultType="java.lang.Integer" >
    select count(0) from wt_userinfo
    <if test="isFuzzyQuery == false" >
      <include refid="Where_Condition" />
    </if>
    <if test="isFuzzyQuery == true" >
      <include refid="Where_Fuzzy_Condition" />
    </if>
  </select>

  <select id="queryPagedList" parameterType="com.manzz.clcw.domain.SmUserInfo" resultMap="SmUserInfoResultMap" >
    select 
    <include refid="SmUserInfo_Column_List" />
    from wt_userinfo
    <if test="isFuzzyQuery == false" >
      <include refid="Where_Condition" />
    </if>
    <if test="isFuzzyQuery == true" >
      <include refid="Where_Fuzzy_Condition" />
    </if>
    <if test="sort != null" >
      ORDER BY ${sort} ${order}
    </if>
    <if test="sort == null" >
      ORDER BY OPER_TIME DESC
    </if>
  </select>
  <!-- 通过用户id查询相应的用户信息（主要包括公司信息） -->
  <select id="queryUserInfoVoByUserId" resultType="com.manzz.clcw.module.sm.web.vo.SmUserInfoVo" >
    select 
    ui.userinfo_id userinfoId,ui.company company,ui.sub sub,c.company_name companyName
    from wt_userinfo ui,wt_company c
    where ui.company = c.company_id
    and ui.user_id = #{userId,jdbcType=VARCHAR}
  </select>
  
</mapper>