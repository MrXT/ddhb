<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.manzz.clcw.module.sm.dao.SmRoleToFunctionDAO" >

  <resultMap id="SmRoleToFunctionResultMap" type="com.manzz.clcw.domain.SmRoleToFunction" >
    <result column="ROLE_ID" property="roleId" jdbcType="VARCHAR" />
    <result column="FUNCTION_ID" property="functionId" jdbcType="VARCHAR" />
    <result column="OPER_ID" property="operId" jdbcType="VARCHAR" />
    <result column="OPER_TIME" property="operTime" jdbcType="TIMESTAMP" />
  </resultMap>

  <sql id="SmRoleToFunction_Column_List" >
    ROLE_ID, FUNCTION_ID, OPER_ID, OPER_TIME
  </sql>

  <insert id="insert" parameterType="com.manzz.clcw.domain.SmRoleToFunction" >
    insert into role_to_function (ROLE_ID, FUNCTION_ID, OPER_ID, 
      OPER_TIME)
    values (#{roleId,jdbcType=VARCHAR}, #{functionId,jdbcType=VARCHAR}, #{operId,jdbcType=VARCHAR}, 
      now())
  </insert>

  <sql id="Where_Condition" >
    <where >
      <if test="roleId != null and roleId != ''" >
        ROLE_ID = #{roleId,jdbcType=VARCHAR}
      </if>
      <if test="functionId != null and functionId != ''" >
        AND FUNCTION_ID = #{functionId,jdbcType=VARCHAR}
      </if>
    </where>
  </sql>

  <sql id="Where_Fuzzy_Condition" >
    <where >
      <if test="roleId != null and roleId != ''" >
        ROLE_ID = #{roleId,jdbcType=VARCHAR}
      </if>
      <if test="functionId != null and functionId != ''" >
        AND FUNCTION_ID = #{functionId,jdbcType=VARCHAR}
      </if>
    </where>
  </sql>

  <select id="queryCount" parameterType="com.manzz.clcw.domain.SmRoleToFunction" resultType="java.lang.Integer" >
    select count(0) from role_to_function
    <if test="isFuzzyQuery == false" >
      <include refid="Where_Condition" />
    </if>
    <if test="isFuzzyQuery == true" >
      <include refid="Where_Fuzzy_Condition" />
    </if>
  </select>

  <select id="queryPagedList" parameterType="com.manzz.clcw.domain.SmRoleToFunction" resultMap="SmRoleToFunctionResultMap" >
    select 
    <include refid="SmRoleToFunction_Column_List" />
    from role_to_function
    <if test="isFuzzyQuery == false" >
      <include refid="Where_Condition" />
    </if>
    <if test="isFuzzyQuery == true" >
      <include refid="Where_Fuzzy_Condition" />
    </if>
    <if test="sort != null" >
      ORDER BY ${sort} ${order}
    </if>
    <if test="sort == null" >
      ORDER BY OPER_TIME DESC
    </if>
  </select>
</mapper>