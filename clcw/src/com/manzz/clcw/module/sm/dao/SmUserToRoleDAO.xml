  <sql id="SmUserToRole_Column_List" >
    USER_ID, ROLE_ID, OPER_ID, OPER_TIME
  </sql>

  <insert id="insert" parameterType="com.manzz.clcw.domain.SmUserToRole" >
    insert into user_to_role (USER_ID, ROLE_ID, OPER_ID, 
      OPER_TIME)
    values (#{userId,jdbcType=VARCHAR}, #{roleId,jdbcType=VARCHAR}, #{operId,jdbcType=VARCHAR}, 
