      <include refid="Where_Condition" />
    </if>
    <if test="isFuzzyQuery == true" >
      <include refid="Where_Fuzzy_Condition" />
    </if>
  </select>

  <select id="queryPagedList" parameterType="com.manzz.clcw.domain.SmUserToRole" resultMap="SmUserToRoleResultMap" >
    select 
    <include refid="SmUserToRole_Column_List" />
    from user_to_role
